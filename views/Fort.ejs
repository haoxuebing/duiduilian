	<script>
		solid();

		$('#form-edit').validate({
			rules: {
				txt: {
					required: true
				}
			},
			onkeyup: false,
			focusCleanup: true,
			success: "valid",
			submitHandler: function (form) {
				$(form).ajaxSubmit({
					type: 'post',
					url: '/seq2seq',
					success: function (data) {
						$('.rlt').css('display', 'block')
						$('.shang').text($('[name="txt"]').val())
						$('.xia').text(data)
					},
					error: function (XmlHttpRequest, textStatus, errorThrown) {
						alert(errorThrown);
					}
				});
			}
		})
	</script>

